<configuration>
  <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>[%d{HH:mm:ss}] [%-9thread] %highlight(%-5level) %cyan(%-35logger{15}) %msg%n</pattern>
    </encoder>
  </appender>

  <logger name="org.jaoed" level="trace" additivity="false">
    <appender-ref ref="STDOUT" />
  </logger>

  <root level="warn">
    <appender-ref ref="STDOUT" />
  </root>
</configuration>
